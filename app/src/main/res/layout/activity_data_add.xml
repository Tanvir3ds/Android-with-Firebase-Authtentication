<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataAdd">

    <EditText
        android:id="@+id/FoodNameEditText_ID"
        android:layout_width="350dp"
        android:layout_height="40dp"

        android:hint="Food Name"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/FoodPriceEditText_ID"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:hint="Food Price"
        android:layout_marginTop="70dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:id="@+id/FoodDescriptionEditText_ID"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:hint="Food Description"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp" />

    <Button
        android:id="@+id/SavePostButton_ID"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="200dp"
        android:text="Post"
        android:textStyle="bold"
        android:layout_marginTop="230dp"
        />


</RelativeLayout>